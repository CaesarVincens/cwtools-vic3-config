types = {
    type[objective_subgoal_category] = {
        path = "game/common/objective_subgoal_categories"
        file_extension = .txt
    }
}

objective_subgoal_category = {
    ## cardinality = 0..1
    ### Whether subgoals of this category are blocked by another active subgoal of the same type (default no)
    is_exclusive = bool

    ## cardinality = 0..1
    ### Whether subgoals of this category can be repeated after being completed (default no)
    is_repeatable = bool
}