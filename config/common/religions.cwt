types = {
    type[religion] = {
        path = "game/common/religions"
        localisation = {
			name = "$"
		}
        images = {
            ## primary
            texture = texture # filepath
        }
    }
}

religion = {
    ### The icon shown ingame
    texture = filepath

    ### Don't mix religious traits with cultural traits
    traits = {
        ## cardinality = 1..inf
        <discrimination_trait>
    }

    color = <named_color>
    color = colour[rgb]
    color = colour[hsv]
    color = {
        ## cardinality = 3..3
        int
    }
    color = {
        ## cardinality = 3..3
        float
    }

    ### These pops hate...
    ## cardinality = 0..1
    taboos = {
        ## cardinality = 1..inf
        <goods.consumable>
    }
}