types = {
    type[modifier_container] = {
        path = "game/common/static_modifiers"
        file_extension = .txt
    }
    localisation = {
        name = "$"
    }
}

modifier_container = {
    ## cardinality = 0..1
    icon = filepath

    ## cardinality = 0..inf
    <modifier_type> = value_field

    ## cardinality = 0..inf
    <modifier_type> = bool
}